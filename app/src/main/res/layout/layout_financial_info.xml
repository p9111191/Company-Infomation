<?xml version="1.0" encoding="utf-8"?>
<!--
  layout_financial_info.xml
  ─────────────────────────
  기존에 숫자가 하드코딩되어 있던 XML을 동적 바인딩 가능하도록 수정.
  DetailActivity.showFinancialInfo() 에서 아래 ID로 값을 세팅합니다.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- ════ 요약 재무상태표 ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요약 재무상태표"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단위: 백만원 (최근 결산 기준)"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp" />

                <!-- 자산총계 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="자산총계"
                        android:textSize="14sp" android:textColor="@color/primary_text" android:textStyle="bold"/>
                    <TextView android:id="@+id/fs_total_assets"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/primary_text" android:textStyle="bold"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 부채총계 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="부채총계"
                        android:textSize="14sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_total_liabilities"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 자본총계 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="자본총계"
                        android:textSize="14sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_total_equity"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/secondary_text"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ════ 요약 손익계산서 ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요약 손익계산서"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단위: 백만원 (최근 결산 기준)"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp" />

                <!-- 매출액 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="매출액"
                        android:textSize="14sp" android:textColor="@color/primary_text" android:textStyle="bold"/>
                    <TextView android:id="@+id/fs_revenue"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/primary_text" android:textStyle="bold"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 영업이익 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="영업이익"
                        android:textSize="14sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_operating_profit"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 당기순이익 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="당기순이익"
                        android:textSize="14sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_net_income"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/secondary_text"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ════ 재무비율 (안정성) ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재무비율"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="12dp" />

                <!-- 부채비율 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="부채비율"
                        android:textSize="14sp" android:textColor="@color/primary_text" android:textStyle="bold"/>
                    <TextView android:id="@+id/fs_debt_ratio"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/primary_text" android:textStyle="bold"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 영업이익률 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="영업이익률"
                        android:textSize="14sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_op_margin"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- ROE -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.2" android:text="ROE"
                        android:textSize="14sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_roe"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-" android:textSize="14sp" android:textColor="@color/secondary_text"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
