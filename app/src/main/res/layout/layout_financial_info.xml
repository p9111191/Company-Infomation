<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- ════ 재무상태표 ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp">

                <!-- 제목 + 단위 한 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="재무상태표"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단위: 백만원"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <!-- 헤더 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="#E3F2FD">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="구분"
                        android:textSize="11sp"
                        android:textColor="#1565C0"/>
                    <TextView android:id="@+id/fs_bs_year_1"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_bs_year_2"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_bs_year_3"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#BBDEFB"/>

                <!-- 자산총계 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="자산총계"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_assets_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_assets_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_assets_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 부채총계 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="부채총계"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_liabilities_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_liabilities_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_liabilities_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 자본금 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="자본금"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_capstock_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_capstock_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_capstock_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 자본총계 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="자본총계"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_equity_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_equity_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_equity_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ════ 손익계산서 ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="손익계산서"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단위: 백만원"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <!-- 헤더 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp" android:paddingBottom="4dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp"
                    android:background="#E3F2FD">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="구분"
                        android:textSize="11sp" android:textColor="#1565C0"/>
                    <TextView android:id="@+id/fs_is_year_1"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_is_year_2"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_is_year_3"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#BBDEFB"/>

                <!-- 매출액 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="매출액"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_revenue_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_revenue_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_revenue_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 영업이익 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="영업이익"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_op_profit_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_op_profit_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_op_profit_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 당기순이익 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="당기순이익"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_net_income_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_net_income_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_net_income_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ════ 현금흐름분석 ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="현금흐름분석"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단위: 백만원"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <!-- 헤더 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp" android:paddingBottom="4dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp"
                    android:background="#E3F2FD">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="구분"
                        android:textSize="11sp" android:textColor="#1565C0"/>
                    <TextView android:id="@+id/fs_cf_year_1"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cf_year_2"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cf_year_3"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#BBDEFB"/>

                <!-- 현금영업이익 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="현금영업이익"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_cash_op_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cash_op_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cash_op_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 경상활동후CF -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="경상활동후CF"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_cash_oper_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cash_oper_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cash_oper_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <!-- 투자활동후CF -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:background="#F8F8F8">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="투자활동후CF"
                        android:textSize="12sp" android:textColor="@color/primary_text"/>
                    <TextView android:id="@+id/fs_cash_invest_1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cash_invest_2" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                    <TextView android:id="@+id/fs_cash_invest_3" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-" android:textSize="12sp" android:textColor="@color/primary_text" android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ════ 재무비율 ════ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="재무비율"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단위: %  /  이자보상배수: 배"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text"/>
                </LinearLayout>

                <!-- 헤더 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp" android:paddingBottom="4dp"
                    android:paddingStart="4dp" android:paddingEnd="4dp"
                    android:background="#E3F2FD">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1.4" android:text="구분"
                        android:textSize="11sp" android:textColor="#1565C0"/>
                    <TextView android:id="@+id/fs_r_year_1"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_r_year_2"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                    <TextView android:id="@+id/fs_r_year_3"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="-"
                        android:textSize="11sp" android:textColor="#1565C0" android:gravity="end"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#BBDEFB"/>

                <!-- 영업이익률 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
