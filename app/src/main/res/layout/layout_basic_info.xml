<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 기본 정보 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본 정보"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기업명"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/businessNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사업자번호: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/ceo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대표자: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/foundedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설립일: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/industry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업종: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/employees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종업원수: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/companyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기업유형: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/companySize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기업규모: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/creditRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신용등급: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 주요주주 정보 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주요 주주"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/shareholderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 주가 정보 (상장기업만) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/stockInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주가 정보 (실시간)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/stockLoadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주가 정보를 불러오는 중..."
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/stockDataLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/currentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:id="@+id/priceChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원 (0.00%)"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/marketCap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시가총액: 0억원"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PER: 0.00"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/pbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PBR: 0.00"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>